@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Update About</h4>
                        <form method="post">
                            <div class="form-group">
                                <input type="hidden" asp-for="aboutID" />
                                <label for="exampleInputTitle">title</label>
                                <input type="text" class="form-control" id="exampleInputTitle" placeholder="Enter Your title" asp-for="title">
                                <label for="exampleInputDescription">Description</label>
                                <textarea rows="5" placeholder="Enter Your Description" asp-for="description"></textarea>
                                <label for="exampleInputImageUrl">imageUrl</label>
                                <input type="text" class="form-control" id="exampleInputImageUrl" placeholder="Enter Your imageUrl" asp-for="imageUrl">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Update</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

