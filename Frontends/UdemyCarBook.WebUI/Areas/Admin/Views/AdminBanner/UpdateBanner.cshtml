@model UpdateBannerDto
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Update Banner</h4>
                        <form method="post">
                            <div class="form-group">
                                <input type="hidden" asp-for="BannerID" />
                                <label for="exampleInputTitle">Banner</label>
                                <input type="text" class="form-control" id="exampleInputTitle" placeholder="Enter Your Banner" asp-for="Title">
                                <label for="exampleInputDescription">Description</label>
                                <input type="text" class="form-control" id="exampleInputDescription" placeholder="Enter Your Description" asp-for="Description">
                                <label for="exampleInputVideoUrl">VideoUrl</label>
                                <input type="text" class="form-control" id="exampleInputVideoUrl" placeholder="Enter Your VideoUrl" asp-for="VideoUrl">
                                <label for="exampleInputVideoDescription">VideoDescription</label>
                                <input type="text" class="form-control" id="exampleInputVideoDescription" placeholder="Enter Your VideoDescription" asp-for="VideoDescription">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Update</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
