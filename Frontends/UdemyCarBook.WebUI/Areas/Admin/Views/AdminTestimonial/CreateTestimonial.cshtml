@model CreateTestimonialDto

@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Create a New Location</h4>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName">Name</label>
                                <input type="text" class="form-control" id="exampleInputName" placeholder="Enter Your Name" asp-for="Name">
                                <label for="exampleInputTitle">Title</label>
                                <input type="text" class="form-control" id="exampleInputTitle" placeholder="Enter Your Title" asp-for="Title">
                                <label for="exampleInputComment">Comment</label>
                                <input type="text" class="form-control" id="exampleInputComment" placeholder="Enter Your Comment" asp-for="Comment">
                                <label for="exampleInputImageUrl">ImageUrl</label>
                                <input type="text" class="form-control" id="exampleInputImageUrl" placeholder="Enter Your ImageUrl" asp-for="ImageUrl">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Create</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>